{
  "name": "weeknote",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "preinstall": "node ./scripts/check-env.mjs",
    "dev": "pnpm build:cli && cd packages/cli && node dist/index.js serve",
    "dev:hot": "pnpm build:core && pnpm --filter weeknote-cli exec tsc && concurrently -k -n api,web -c blue,green \"pnpm dev:api\" \"pnpm dev:web\"",
    "dev:api": "cd packages/cli && node --watch dist/index.js serve --no-open",
    "dev:web": "pnpm --filter @weeknote/web dev",
    "build": "pnpm -r build",
    "build:core": "pnpm --filter @weeknote/core build",
    "build:cli": "pnpm --filter weeknote-cli build",
    "build:web": "pnpm --filter @weeknote/web build",
    "test": "pnpm -r test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "serve": "cd packages/cli && node dist/index.js serve",
    "cli": "cd packages/cli && node dist/index.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/node": "^22.19.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  },
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=18 <19"
  },
  "keywords": [
    "weeknote",
    "weekly-report",
    "ai",
    "cli",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "description": "AI-powered weekly report generator",
  "repository": {
    "type": "git",
    "url": ""
  }
}
